{
    "name": "slambox container",
    "build": {
        "dockerfile": "../Dockerfile",
        "context": ".."
    },
    "remoteUser": "dev",
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/home/vscode/venv/slambox/bin/python"
            },
            "extensions": [
                "ms-toolsai.jupyter",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.jupyter-renderers",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.autopep8",
                "ms-python.isort",
                "ms-vscode.cpptools",
                "xaver.clang-format"
            ]
        }
    }
}